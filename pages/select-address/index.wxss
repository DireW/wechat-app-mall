.container {
    background-color: #f2f2f2;
}

.address-list {
    width: 100%;
    background-color: #fff;
    margin-top: 20 rpx;
    padding-bottom: 100 rpx;
}

.address-list .a-address {
    width: 720 rpx;
    margin-left: 30 rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30 rpx 0;
    border-bottom: 1 rpx solid #eee;
}

.a-address .left-text {
    width: 610 rpx;
    box-sizing: border-box;
}

.a-address .left-text .name-tel {
    margin-bottom: 20 rpx;
}

.a-address .left-text .address-box {
    font-size: 24 rpx;
    color: #888;
    line-height: 36 rpx;
}

.a-address .right-edit {
    width: 72 rpx;
}

.a-address .right-edit image {
    width: 40 rpx;
    height: 40 rpx;
}

.bottom-box {
    position: fixed;
    width: 100vw;
    bottom: 0;
    font-size: 28 rpx;
    color: #333;
    border-top: 1 rpx solid #eee;
    height: 100 rpx;
    background: #fff;
    line-height: 100 rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.bottom-box .next {
    margin-right: 32 rpx;
    width: 40 rpx;
    height: 40 rpx;
}

.bottom-box .add-btn {
    display: flex;
    align-items: center;
    margin-left: 32 rpx;
}

.bottom-box .add-btn image {
    width: 40 rpx;
    height: 40 rpx;
}

.bottom-box .add-btn view {
    margin-left: 16 rpx;
}
